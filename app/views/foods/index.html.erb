<h1>Foods</h1>

<button><%= link_to ("Add food"), new_user_recipe_food_path(@foods)%></button>
<%@foods.each do |food|%>

<table>
<tr>
  <th>Food</th>
  <th>Measurement Unit</th>
  <th>Unit Price</th>
  <th>Actions</th>
</tr>
<tr>
  <td> <p><%= food.name %></p></td>
  <td> <p><%= food.measurement_unit %></p></td>
  <td> <p><%= food.price %></p></td>
  <td><%=  button_to "Delete Food", "/users/#{:user_id}/recipes/#{:recipe_id}/foods/#{food.id}", method: :delete,  data: { confirm: 'Are you sure you want to delete this topic?' } %></td>

</tr>

</table>

<%end%> 

