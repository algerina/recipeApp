<h1>Recipes</h1>

 <button><%= link_to ("Add a recipe"), new_user_recipe_path(@recipes)%></button>
<%@recipes.each do |recipe|%>
    <p><%= link_to (recipe.name), "/users/#{:user_id}/recipes/#{recipe.id}"%></p>
    <p><%=recipe.description%></p>
    <p><%=  button_to "Delete Recipe", "/users/:#{:user_id}/recipes/#{recipe.id}", method: :delete,  data: { confirm: 'Are you sure you want to delete this topic?' } %></p>
<%end%> 
